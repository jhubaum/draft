<div id="draft_<%= draft.id %>">
  <h2><%= draft.title %></h2>
  <div class="urls">
    <% draft.urls.each do |url| %>
    <%= render url %>
    <% end %>
  </div>

  <%= form_with model: Url.new do |form| %>
    <%= form.hidden_field :draft_id, :value => draft.id %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>
    <p><%= form.submit %></p>
  <% end %>

  <%= button_to "Delete", draft_path(draft),
      remote: true,
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
</div>
